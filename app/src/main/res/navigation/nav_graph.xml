<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="com.mobileapp.cookie_jar.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping_list" />

    <fragment
        android:id="@+id/mysteryBoxFragment"
        android:name="com.mobileapp.cookie_jar.MysteryBoxFragment"
        android:label="Mystery Box"
        tools:layout="@layout/fragment_mystery_box" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mobileapp.cookie_jar.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeCookWithMeFragment"
        android:name="com.mobileapp.cookie_jar.RecipeCookWithMeFragment"
        android:label="Cook with Me"
        tools:layout="@layout/fragment_recipe_cook_with_me" />

    <fragment
        android:id="@+id/recipeIngredientsFragment"
        android:name="com.mobileapp.cookie_jar.RecipeIngredientsFragment"
        android:label="Ingredients"
        tools:layout="@layout/fragment_recipe_ingredients" />

    <fragment
        android:id="@+id/recipeOverviewFragment"
        android:name="com.mobileapp.cookie_jar.RecipeOverviewFragment"
        android:label="Overview"
        tools:layout="@layout/fragment_recipe_overview" />

    <fragment
        android:id="@+id/recipeStepsFragment"
        android:name="com.mobileapp.cookie_jar.RecipeStepsFragment"
        android:label="Steps"
        tools:layout="@layout/fragment_recipe_steps" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mobileapp.cookie_jar.homeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.mobileapp.cookie_jar.aboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.mobileapp.cookie_jar.helpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />

</navigation>